      {{#each this.years as |year|}}
      <button
        type="button"
        class="btn mx-1 {{if (eq year this.activeYear) 'btn-light' 'btn-outline-light'}}"
        {{on "click" (fn this.handleActiveYear year)}}
      >
        {{year}}
      </button>
    {{/each}}
</div>



  {{!View type Buttons }}
<div class="d-flex">
  <button
    class="btn btn-dark py-2 text-light me-2
      {{if (eq this.viewData "listform") "border border-1 border-light"}}"
    id="list-form"
    type="button"
    {{on "click" this.handleListview}}
  >
    <i class="fa-solid fa-list" style="font-size: 30px;"></i>
  </button>

  <button
    class="btn btn-dark py-2 text-light
      {{if (eq this.viewData "cardform") "border border-1 border-light"}}"
    id="card-form"
    type="button"
    {{on "click" this.handleCardview}}
  >
    <i class="fa-solid fa-table-cells" style="font-size: 30px;"></i>
  </button>
</div>
</div>



