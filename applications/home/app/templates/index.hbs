  <EventByYear @year={{this.selectedYear}} @allEvents={{@model.events}} />
  <PlaysByYear @year={{this.selectedYear}} @allPlays={{@model.plays}} />
  <TheatreEventByYear @year={{this.selectedYear}} @allTheatreMilieus={{@model.theatreMilieus}}/>
</div> --}}


<div class="d-flex ">
{{#if (eq this.viewData "listform")}}
  <div class="d-flex mt-7">
    <EventByYear @year={{this.selectedYear}} @allEvents={{@model.events}} />
    <PlaysByYear @year={{this.selectedYear}} @allPlays={{@model.plays}} />
    <TheatreEventByYear @year={{this.selectedYear}} @allTheatreMilieus={{@model.theatreMilieus}}
    />
  </div>
{{else if (eq this.viewData "cardform")}}
  <div class="d-flex mt-7 gap-5 justify-content-center">
    <EventsCardView @year={{this.selectedYear}} @allEvents={{@model.events}} />
    <PlaysCardView @year={{this.selectedYear}} @allPlays={{@model.plays}} />
    <TheatreCardView @year={{this.selectedYear}} @allTheatreMilieus={{@model.theatreMilieus}} />
  </div>
{{/if}}

</div>



{{outlet}}