<div class="d-flex">
  {{#if (eq this.viewData "listform")}}
    <div class="d-flex mt-7">
      <EventByYear @year={{this.activeYear}} @allEvents={{@model.events}} />
      <PlaysByYear @year={{this.activeYear}} @allPlays={{@model.plays}} />
      <TheatreEventByYear
        @year={{this.activeYear}}
        @allTheatreMilieus={{@model.theatreMilieus}}
      />
    </div>
  {{else if (eq this.viewData "cardform")}}
    <div class="d-flex mt-7 gap-5 justify-content-center">
      <EventsCardView @year={{this.activeYear}} @allEvents={{@model.events}} />
      <PlaysCardView @year={{this.activeYear}} @allPlays={{@model.plays}} />
      <TheatreEventCardView
        @year={{this.activeYear}}
        @allTheatreMilieus={{@model.theatreMilieus}}
      />
    </div>
  {{/if}}

</div>

