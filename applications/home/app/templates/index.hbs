<div class="d-flex justify-content-between align-items-center px-3 bg-dark py-2" style="position: fixed; top: 120px; width: 100%; z-index: 1030;">
  {{!-- Left: Year Buttons --}}
  <div class="d-flex flex-wrap">
    {{#each this.years as |year|}}
      <button
        type="button"
        class="btn mx-1 {{if (eq year this.selectedYear) 'btn-light' 'btn-outline-light'}}"
        {{on "click" (fn this.selectYear year)}}
      >
        {{year}}
      </button>
    {{/each}}
  </div>


  {{!--View type Buttons --}}
  <div class="d-flex">
    {{!-- <p>View type </p> --}}
    <button
      class="btn btn-dark py-2 text-light me-2"
      id="list-form"
      type="button"
      {{on "click" this.handleListview}}
    >
      <i class="fa-solid fa-list" style="font-size: 30px;"></i>
    </button>

    <button
      class="btn btn-dark py-2 text-light"
      id="card-form"
      type="button"
      {{on "click" this.handleCardview}}
    >
      <i class="fa-solid fa-table-cells" style="font-size: 30px;"></i>
    </button>
  </div>
</div>



