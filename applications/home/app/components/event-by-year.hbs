{{! event-by-year.hbs }}
{{!-- <h3 class="text-light mb-4">Events - {{@year}}</h3> --}}
<div>
  <h3 class="text-light text-center mb-4">Social Economic Political Cultural
    Events
  </h3>

  <div style="min-width:70%;">
    <table class="table table-dark table-bordered w-100">
      <thead>
        <tr class="text-center" >
          <th style="min-width: 200px;">Social</th>
          <th style="min-width: 200px;">Economic</th>
          <th style="min-width: 200px;">Political</th>
          <th style="min-width: 200px; max-width:200px;">Cultural</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            {{#each @allEvents as |event|}}
              {{#if
                (and
                  (eq event.modules.year @year)
                  (eq event.modules.event_type "social")
                )
              }}
                <div class="my-4 mx-2 text-wrap sr-hidden" {{did-insert this.animateReveal}}>{{event.modules.title}}</div>
              {{/if}}
            {{/each}}
          </td>
          <td>
            {{#each @allEvents as |event|}}
              {{#if
                (and
                  (eq event.modules.year @year)
                  (eq event.modules.event_type "economic")
                )
              }}
                <div class="my-4 mx-2 text-wrap sr-hidden" {{did-insert this.animateReveal}}>{{event.modules.title}}</div>
              {{/if}}
            {{/each}}
          </td>
          <td>
            {{#each @allEvents as |event|}}
              {{#if
                (and
                  (eq event.modules.year @year)
                  (eq event.modules.event_type "political")
                )
              }}
                <div class="my-4 mx-2 text-wrap sr-hidden" {{did-insert this.animateReveal}}>{{event.modules.title}}</div>
              {{/if}}
            {{/each}}
          </td>
          <td>
            {{#each @allEvents as |event|}}
              {{#if
                (and
                  (eq event.modules.year @year)
                  (eq event.modules.event_type "cultural")
                )
              }}
                <div class="my-4 mx-2 text-wrap sr-hidden" {{did-insert this.animateReveal}}>{{event.modules.title}}</div>
              {{/if}}
            {{/each}}
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>