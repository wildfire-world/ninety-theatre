<div class="h-100 bg-dark text-light border-light" style="width: 900px;">
  <h4 class="text-center mb-4">Plays</h4>
<div
  class="h-100 bg-dark text-light p-3 shadow border-light"
  style="width: 900px;"
>
    <div class="row row-cols-1 row-cols-md-3 g-3">
      {{#each @allPlays as |play|}}
        {{#if (eq play.modules.year @year)}}
          <div class="col">
            <div
              class="card bg-dark text-light h-100 p-3 position-relative border border-light border-1"
            >
              <span class="mt-3 text-light small">
                {{play.modules.title}}
              </span>
              <span class="mt-3 text-warning small">
                {{play.modules.playwrights}}
              </span>
              <span class="mt-3 text-warning small">
                {{play.modules.director}}
              </span>
              <span class="mt-2 text-warning small">
                {{play.modules.language}}
              </span>
              <SeeMore @brief={{play.modules.brief}} />
            </div>
          </div>
        {{/if}}
      {{/each}}
    </div>
  </div>
</div>
