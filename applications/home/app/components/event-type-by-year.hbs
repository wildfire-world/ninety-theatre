
{{!-- events --}}
{{#if @event}}
  <div class="p-2 mb-2 border rounded event-{{@event.modules.event_type}}">
    <div class="p-3">{{@event.modules.title}}</div>
  </div>
{{/if}}

{{!-- plays --}}
{{#if @plays}}
  <div class="p-2 mb-2 border rounded theatreEvent-{{@plays.modules}}">
    <div class="p-3">{{@plays.modules.title}}</div>
  </div>
{{/if}}

{{!-- theatre events --}}
{{#if @theatreEvent}}
  <div class="p-2 mb-2 border rounded theatreEvent-{{@theatreEvent.modules.event_type}}">
    <div class="p-3">{{@theatreEvent.modules.title}}</div>
  </div>
{{/if}}
