<div class="bg-dark text-light p-3" style="width: 800px;">
  <h4 class="text-center mb-4">Social Economic Political Cultural Events </h4>

    <div class="row row-cols-1 row-cols-md-3 g-3">
      {{#each @allEvents as |event|}}
        {{#if (eq event.modules.year @year)}}
          <div class="col">
            <div
              class="card bg-dark text-light h-100 p-3 position-relative border"
              {{!-- style="box-shadow: 0 4px 10px -5px rgba(255, 255, 255, 0.3);"   --}}
               >
              class="card bg-dark text-light h-100 p-3 position-relative border border-light border-1">
              <p class="card-title">{{event.modules.title}}</p>

              <span class=" mt-3 text-warning small">
                {{event.modules.event_type}}
              </span>
            </div>
          </div>
        {{/if}}
      {{/each}}
    </div>
</div>
